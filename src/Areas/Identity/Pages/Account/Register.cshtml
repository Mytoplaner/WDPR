@page
@model RegisterModel
@{
    ViewData["Title"] = "Registreer";
    var list = new List<SelectListItem> 
        {  
        new SelectListItem { Text = "Moderator", Value = "1", Selected=true},
        new SelectListItem { Text = "Hulpverlener", Value = "2"},
        new SelectListItem { Text = "Client", Value = "3"},
        new SelectListItem { Text = "Voogd", Value = "4"}
        };
}

<div class="row justify-content-center">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1>@ViewData["Title"]</h1>
        <h4>Maak een nieuw account.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password">Wachtwoord</label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword">Bevestig wachtwoord</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Voornaam">Voornaam</label>
            <input asp-for="Input.Voornaam" class="form-control" />
            <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Functie"></label>
            <select asp-for="Input.Functie" asp-items="@list"></select>
            <span asp-validation-for="Input.Functie" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Hulpverlener"></label>
            <select asp-for="Input.Hulpverlener" asp-items='@(new SelectList((IEnumerable<Hulpverlener>)ViewData["Hulpverleners"], "Id", "Voornaam"))'></select>
            <span asp-validation-for="Input.Hulpverlener" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Registreer</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
