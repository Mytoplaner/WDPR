@model IEnumerable<Aanmelding>

@{
    ViewData["Title"] = "Aanmeldingen";
}

<h1>Aanmeldingen</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stoornis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leeftijdscategorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AfspraakDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NaamVoogd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailVoogd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoonVoogd)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achternaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stoornis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leeftijdscategorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AfspraakDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NaamVoogd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailVoogd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoonVoogd)
            </td>
            <td>
                <a asp-controller="Hulpverlener" asp-action="MaakAccount" asp-route-id="@item.AanmeldingId">Maak Account</a>
                <a asp-controller="Aanmelding" asp-action="Details" asp-route-id="@item.AanmeldingId">Bekijk</a>
            </td>
        </tr>
}
    </tbody>
</table>
