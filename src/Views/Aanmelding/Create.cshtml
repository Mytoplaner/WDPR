        <div class="row justify-content-center">
            <div class="form-box col-12">
                <h2 class="text-center mb-3">Aanmelden</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                                <label asp-for="Voornaam" class="control-label">Voornaam:</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" id="naam" asp-for="Voornaam" class="form-control" />
