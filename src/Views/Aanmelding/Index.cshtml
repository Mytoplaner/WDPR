@model IEnumerable<Aanmelding>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BSN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stoornis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leeftijdscategorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NaamVoogd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hulpverlener)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achternaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BSN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stoornis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leeftijdscategorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NaamVoogd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HulpverlenerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AanmeldingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AanmeldingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AanmeldingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
