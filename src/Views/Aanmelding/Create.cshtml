@model Aanmelding

@{
    ViewData["Title"] = "Create";
    var Hulpverleners = ViewData["Hulpverlener"];
    List<SelectListItem> List = new List<SelectListItem>();
    foreach(var hulp in (List<Hulpverlener>)Hulpverleners)
    {
        List.Add(new SelectListItem() { Text = hulp.Voornaam, Value = hulp.Id.ToString() });
    }
}

<h1>Create</h1>

<h4>Aanmelding</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label"></label>
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Achternaam" class="control-label"></label>
                <input asp-for="Achternaam" class="form-control" />
                <span asp-validation-for="Achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stoornis" class="control-label"></label>
                <input asp-for="Stoornis" class="form-control" />
                <span asp-validation-for="Stoornis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leeftijdscategorie" class="control-label"></label>
                <input asp-for="Leeftijdscategorie" class="form-control" />
                <span asp-validation-for="Leeftijdscategorie" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label asp-for="Hulpverlener"></label>
               <select asp-for="Hulpverlener" asp-items="@List"></select>
               <span asp-validation-for="Hulpverlener" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

