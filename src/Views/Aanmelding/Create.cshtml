                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <label asp-for="Leeftijdscategorie" class="control-label">Leeftijdscategorie:</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Leeftijdscategorie" type="date" class="form-control" />
                                <span asp-validation-for="Leeftijdscategorie" class="text-danger"></span><br>
